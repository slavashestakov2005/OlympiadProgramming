\def\cpp#1#2{
    \setcounter{linetmp}{\thelinetmp + #2 - 1}
    \inputminted[fontsize=\footnotesize, linenos=true, xleftmargin=\skippar, firstnumber=1,
    firstline=\theline, lastline=\thelinetmp]{C++}{programs/#1.cpp}
    \setcounter{line}{\theline + #2}
    \stepcounter{linetmp}
}

